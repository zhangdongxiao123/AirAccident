<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_marginTop="5dp"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android" 
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/item_single_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="id:123">
    </TextView>
    <TextView
        android:id="@+id/item_single_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="标题：XX航班怎么样">
    </TextView>
    <TextView
        android:id="@+id/item_single_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="类型：一般事故">
    </TextView>
    <TextView
        android:id="@+id/item_single_when"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="时间：2019年10月10日">
    </TextView>
    <TextView
        android:id="@+id/item_single_where"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="地点：东京">
    </TextView>
    <TextView
        android:id="@+id/item_single_why"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="原因：机组原因">
    </TextView>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Search.sactivity.ManLoginActivity">
    <ImageView
        android:id="@+id/manlogin_img"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/ic_login_top"
        android:scaleType="centerCrop">
    </ImageView>
    <com.knifestone.hyena.view.edittext.ClearEditText
        android:id="@+id/manAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="管理员请输入账号"
        android:drawableLeft="@drawable/ic_person_red"
        android:layout_below="@id/manlogin_img"
        android:drawablePadding="10dp"
        android:layout_marginTop="50dp"
        app:drawable_tint="#F11606">
    </com.knifestone.hyena.view.edittext.ClearEditText>
    <com.knifestone.hyena.view.edittext.EyesEditText
        android:id="@+id/manPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/manAccount"
        android:drawableLeft="@drawable/ic_https_red"
        android:drawablePadding="10dp"
        android:layout_marginTop="20dp"
        android:hint="管理员请输入密码"
        app:drawable_tint="#F11606"
        android:inputType="textPassword">
    </com.knifestone.hyena.view.edittext.EyesEditText>
    <Button
        android:id="@+id/manLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/manPassword"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:text="管理员登录"
        android:textSize="20dp">
    </Button>
    <RelativeLayout
        android:id="@+id/man_relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/manLogin"
        android:layout_marginTop="20dp"
        android:padding="10dp">
        <TextView
            android:id="@+id/man_mima"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="忘记密码"
            android:textColor="#F11606"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_alignParentLeft="true">
        </TextView>
        <TextView
            android:id="@+id/man_zhuce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="赶快注册"
            android:textColor="#F11606"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_alignParentRight="true">
        </TextView>
    </RelativeLayout>

</RelativeLayout>